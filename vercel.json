{
  "functions": {
    "app/api/automation/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/workflows/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/workflows/execute/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/workflows/share/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/health/**/*.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ]
}
